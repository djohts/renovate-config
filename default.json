{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "The default configuration for Renovate",

  "timezone": "Europe/Oslo",

  "reviewers": ["promise"],
  "assigneesFromCodeOwners": true,
  "labels": ["dependencies"],
  "platformCommit": true,
  "rangeStrategy": "pin",
  "transitiveRemediation": true,
  "prFooter": null,

  "dependencyDashboard": true,
  "dependencyDashboardHeader": "![](https://i.imgur.com/kX4uzqH.gif)",
  "dependencyDashboardLabels": ["dependencies"],

  "lockFileMaintenance": { "enabled": true },
  "pinDigests": true,

  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,

  "vulnerabilityAlerts": {
    "labels": ["dependencies", "security"],
    "rangeStrategy": "update-lockfile"
  },

  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Automerge dependencies with built-in type definitions",
      "matchPackageNames": ["discord.js", "@types/node", "typescript"],
      "automerge": true
    },
    {
      "description": "Automerge patches",
      "matchUpdateTypes": ["patch", "pin", "pinDigest", "digest", "lockFileMaintenance", "rollback", "bump"],
      "automerge": true
    },
    {
      "description": "Group Docusaurus dependencies",
      "matchPackagePatterns": ["^@docusaurus/"],
      "groupName": "Docusaurus"
    },
    {
      "description": "Group React dependencies",
      "extends": ["packages:react"],
      "groupName": "React"
    },
    {
      "description": "Group linting dependencies",
      "extends": ["packages:linters"],
      "groupName": "linting"
    },
    {
      "description": "Group testing dependencies",
      "extends": ["packages:test"],
      "groupName": "testing"
    }
  ]
}