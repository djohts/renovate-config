{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "The default configuration for Renovate",

  "timezone": "Europe/Oslo",

  "assignees": ["promise"],
  "reviewersFromCodeOwners": true,
  "labels": ["dependencies"],
  "platformCommit": true,
  "rangeStrategy": "pin",
  "transitiveRemediation": true,
  "prFooter": null,

  "dependencyDashboard": true,
  "dependencyDashboardHeader": null,
  "dependencyDashboardLabels": ["dependencies"],

  "lockFileMaintenance": { "enabled": true },

  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,

  "vulnerabilityAlerts": {
    "labels": ["dependencies", "security"],
    "rangeStrategy": "update-lockfile"
  },

  "platformAutomerge": true,
  "packageRules": [
    {
      "description": "Automerge dependencies with built-in type definitions",
      "matchPackageNames": ["discord.js"],
      "automerge": true
    },
    {
      "description": "Group Docusaurus dependencies",
      "matchPackagePatterns": ["^@docusaurus/"],
      "groupName": "Docusaurus"
    }
  ]
}